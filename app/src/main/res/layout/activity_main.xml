<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_show_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="show swipe dialog fragment"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_show_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_show_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="show swipe back activity"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_show_swipe_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_show_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="show swipe cards like Tinder"
        android:textSize="18sp" />
</RelativeLayout>

